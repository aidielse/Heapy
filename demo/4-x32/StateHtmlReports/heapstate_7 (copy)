<html>
<head>

<style>

body {
    margin: 0;            /* Reset default margin */
}
iframe {
    display: block;       /* iframes are inline by default */
    background: #000;
    border: none;         /* Reset default border */
    height: 100vh;        /* Viewport-relative units */
    width: 100vw;
}
</style>

<script>
document.onkeydown = checkKey;

var max_index = 7
var curr_index = 1

function checkKey(e) {

    e = e || window.event;

    if (e.keyCode == '38') {
        // up arrow
    }
    else if (e.keyCode == '40') {
        // down arrow
    }
    else if (e.keyCode == '37') {
	if(curr_index == 1){
	return	
	}else{
           curr_index--;
	   document.getElementById('main_view').src = "./heapstate_"+curr_index
	}      
    }
    else if (e.keyCode == '39') {
      	if(max_index == curr_index){
	   return	
	}else{
           curr_index++;
	   document.getElementById('main_view').src = "./heapstate_"+curr_index
	}    
    }

}

</script>
</head>

<body>

<iframe id="main_view" src="./heapstate_1"></iframe>


</body>
</html>
